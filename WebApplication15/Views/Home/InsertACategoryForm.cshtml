<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insert a New Category</title>
    <script>
        function validateForm() {
            var categoryName = document.getElementsByName("categoryName")[0].value.trim();
            var description = document.getElementsByName("description")[0].value.trim();

            // Basic validation
            if (categoryName === "" || description === "") {
                alert("Please enter valid values for all fields.");
                return false;
            }

            // Additional validation if needed

            return true; // Form submission will proceed if all validations pass
        }
    </script>
</head>
<body>
    <h2>Insert a New Category</h2>
    <form action="InsertACategory" method="post" onsubmit="return validateForm()">
        Category Name <br />
        <input type="text" name="categoryName" /> <br />

        Description <br />
        <input type="text" name="description" /> <br />

        <br /><br />

        <input type="submit" />
        <input type="reset" />
    </form>
</body>
</html>

