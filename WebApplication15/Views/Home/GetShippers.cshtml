@{
    ViewData["Title"] = "Shippers";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Shippers.css" asp-append-version="true" />
</head>
<body>
    <h1>Shippers</h1>
    <a href="/Home/InsertShipperForm" class="button"> Insert A Shipper </a>
    <br />
    <br />

    <table class="table table-bordered">

        <tr>
            <th> ShipperId </th>
            <th> CompanyName </th>
            <th> Phonenum </th>
            <th>   </th>
        </tr>

        @foreach (var shipper in ViewBag.ListOfShippers)
        {
            <tr>
                <td> <a href="UpdateShipperForm?shipperId=@shipper.ShipperId">     @shipper.ShipperId   </a></td>
                <td> <a href="UpdateShipperForm?shipperId=@shipper.ShipperId">     @shipper.CompanyName </a></td>
                <td> @shipper.Phonenum </td>
                <td> <a href="UpdateShipperForm?shipperId=@shipper.ShipperId" class="button">Update</a> </td>
            </tr>
        }

    </table>
</body>
</html>

